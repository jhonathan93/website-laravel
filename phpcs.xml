<?xml version="1.0"?>
<ruleset name="Laravel Coding Standard">
    <description>Custom rules for Laravel project</description>

    <!-- Ignorar regras de WordPress -->
    <rule ref="WordPress.Security.EscapeOutput">
        <severity>0</severity>
    </rule>

    <rule ref="ESLint.Security.DetectObjectInjection">
        <severity>0</severity>
    </rule>

    <rule ref="Generic.Arrays.DisallowShortArraySyntax">
        <severity>0</severity>
    </rule>
</ruleset>
